<h2>Show admin link</h2>

<ul>
  <li>
    <strong>Title:</strong>
    <%= @link.title %>
  </li>
  <li>
    <strong>Url:</strong>
    <%= @link.url %>
  </li>
  <li>
    <strong>Description:</strong>
    <%= @link.description %>
  </li>
</ul>

<%= link "Edit", to: admin_link_path(@conn, :edit, @link) %>
<%= link "Back", to: admin_link_path(@conn, :index) %>
