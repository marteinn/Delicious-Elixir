{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "React": false,
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/jsx-no-bind": 0,
        "strict": 2,
        "camelcase": 2,
        "curly": 2,
        // Set to 1 before going live
        "no-console": 0,
        "indent": 2,
        "comma-spacing": 2,
        "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
        "no-var": 2,
        "eqeqeq": 2,
        "max-len": [1, 120, 4, {"ignoreComments": true, "ignoreUrls": true}]
    }
}
